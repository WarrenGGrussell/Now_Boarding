<% if @country && @country.errors.any? %>
  <div>
    <strong>Some issues with your country, please fix them:</strong>
    <ul>
      <% @country.errors.full_countries.each do |country| %>
        <li><%= country %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form method="post" action="/countries">
  <div>
    <label>Name:</label>
    <input type="text" name="name" value="<%= @country && @country.name %>">
  </div>
 
  <div>
    <input type="submit" value="Submit">
  </div>
</form>