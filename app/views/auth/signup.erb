</br>
<form action="/signup" method="post">
<div class="centerwhite"> Time To Jet.</div>
</br>

  <div class="centerwhite">
    <label>Username:</label>
  </div>
  <div class="center">
    <input type="text" name="username" value="<%= @user && @user.username %>">
  </div>

<br>

  <div class="centerwhite">
    <label>Email:</label>
  </div>
  <div class="center">
    <input type="text" name="email" value="<%= @user && @user.email %>">
  </div>

<br>

  <div class="centerwhite">
    <label>Password:</label>
  </div>
  <div class="center">
      <input type="text" name="password" value="<%= @user && @user.password %>">
  </div>

  <div class="center">
    <input type="submit" value="Submit">
  </div>

</form>

<% if @user && @user.errors.any? %>
  <div>
    <strong>Email or password seems invalid, please fix:</strong>
    <ul>
      <% @user.errors.full_users.each do |user| %>
        <li><%= user %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<br>
<div class="centerwhite">Hold up. Got an account with us already?</div>
  <div class="center"><form action="/login">
    <input type="submit" value="Log in">
</form>