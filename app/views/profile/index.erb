<div class="container-fluid fill">

  <div class="row">

    <div class="col-md-4 profilepic">
      <img class="profilepic" src="https://scontent-b-sea.xx.fbcdn.net/hphotos-xfa1/t1.0-9/s720x720/179556_10151953940110254_1247289906_n.jpg">
    </div>

    <div class="col-md-8 profile">

      <h1 class="blackheader"><%= @current_user.username %></h1>

      <div class="corner">
        <% if current_user %>
          <div class="center">
          <a href="/" class="btn btn-default">Log out</a>
          </div>
        <% else %>
          <div class="center">
          <a href="/login" class="btn btn-default">Log in</a>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>